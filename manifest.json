{
  "manifest_version": 3,
  "name": "UnionMods Ad Remover",
  "version": "1.1",
  "description": "Removes specific ads from the unionmods.com website.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.unionmods.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}